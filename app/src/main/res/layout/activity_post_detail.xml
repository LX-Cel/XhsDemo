<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".PostDetailActivity">

    <LinearLayout
        android:id="@+id/detailToolbar"
        android:layout_width="0dp"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="@dimen/spacing_12"
        android:paddingEnd="@dimen/spacing_12"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/navBack"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="@null"
            android:padding="6dp"
            android:src="@drawable/ic_back" />

        <ImageView
            android:id="@+id/detailAvatar"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="@dimen/spacing_8"
            android:background="@drawable/bg_avatar_placeholder"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/detailAuthor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_8"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:textStyle="bold"
            tools:text="一只开心" />

        <Button
            android:id="@+id/btnFollow"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:backgroundTint="@color/white"
            android:drawablePadding="6dp"
            android:elevation="0dp"
            android:foregroundTint="@color/xhs_red"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingStart="@dimen/spacing_12"
            android:paddingEnd="@dimen/spacing_12"
            android:text="关注"
            android:textColor="@color/xhs_red"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginStart="@dimen/spacing_8"
            android:contentDescription="@null"
            android:padding="6dp"
            android:src="@drawable/ic_more" />
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="@dimen/spacing_16"
        android:paddingEnd="@dimen/spacing_16"
        android:paddingBottom="@dimen/spacing_20"
        app:layout_constraintTop_toBottomOf="@id/detailToolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_12"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_fire" />

                <TextView
                    android:id="@+id/detailTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_8"
                    android:textColor="@color/xhs_gray"
                    android:textSize="12sp"
                    tools:text="1 小时前" />
            </LinearLayout>

            <ImageView
                android:id="@+id/detailCover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image_placeholder"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_empty" />

            <TextView
                android:id="@+id/detailTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_16"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="夏天的海水和晚风，都藏在这里" />

            <TextView
                android:id="@+id/detailContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_12"
                android:lineSpacingExtra="4dp"
                android:textColor="#FF333333"
                android:textSize="15sp"
                tools:text="在滨海公路上骑行，傍晚的风吹散了白天的热意..." />

            <TextView
                android:id="@+id/commentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_20"
            android:text="@string/comments_title"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/commentContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_12"
                android:orientation="vertical"
                tools:listitem="@layout/item_comment" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
