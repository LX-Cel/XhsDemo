<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawerContainer"
    android:layout_width="300dp"
    android:layout_height="match_parent"
    android:background="@color/xhs_light_gray"
    android:orientation="vertical"
    android:layout_gravity="start">

    <View
        android:id="@+id/drawerStatusBarSpace"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:clipToPadding="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card 1: Add Friend -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_drawer_card"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/itemAddFriend"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_add_friend"
                    android:drawableStart="@drawable/ic_add_friend"
                    android:drawablePadding="12dp"/>
            </LinearLayout>

            <!-- Card 2: Creator Center -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_drawer_card"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/itemCreatorCenter"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_creator"
                    android:drawableStart="@drawable/ic_inspiration"
                    android:drawablePadding="12dp"/>
            </LinearLayout>

            <!-- Card 3: My Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_drawer_card"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/itemDraft"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_draft"
                    android:drawableStart="@drawable/ic_draft"
                    android:drawablePadding="12dp"/>
                <TextView
                    android:id="@+id/itemComments"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_comment"
                    android:drawableStart="@drawable/ic_comment"
                    android:drawablePadding="12dp"/>
                <TextView
                    android:id="@+id/itemHistory"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_history"
                    android:drawableStart="@drawable/ic_history"
                    android:drawablePadding="12dp"/>
                <TextView
                    android:id="@+id/itemDownload"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_download"
                    android:drawableStart="@drawable/ic_download"
                    android:drawablePadding="12dp"/>
            </LinearLayout>

            <!-- Card 4: Shopping -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_drawer_card"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/itemOrder"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_order"
                    android:drawableStart="@drawable/ic_order"
                    android:drawablePadding="12dp"/>
                <TextView
                    android:id="@+id/itemCart"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_cart"
                    android:drawableStart="@drawable/ic_cart"
                    android:drawablePadding="12dp"/>
                <TextView
                    android:id="@+id/itemWallet"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_wallet"
                    android:drawableStart="@drawable/ic_wallet"
                    android:drawablePadding="12dp"/>
            </LinearLayout>

            <!-- Card 5: Mini App -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_drawer_card"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/itemMini"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_mini_app"
                    android:drawableStart="@drawable/ic_link"
                    android:drawablePadding="12dp"/>
            </LinearLayout>

            <!-- Card 6: Community -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_drawer_card"
                android:orientation="vertical"
                android:layout_marginBottom="12dp">
                <TextView
                    android:id="@+id/itemCommunity"
                    style="@style/ProfileDrawerItem"
                    android:text="@string/drawer_public"
                    android:drawableStart="@drawable/ic_sprout"
                    android:drawablePadding="12dp"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Area -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white">

        <!-- Scan -->
        <LinearLayout
            android:id="@+id/itemScan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_drawer_icon_circle"
                android:src="@drawable/ic_scan"
                android:padding="10dp"
                android:contentDescription="@string/drawer_scan"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_scan"
                android:textSize="12sp"
                android:textColor="@color/xhs_gray"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Help -->
        <LinearLayout
            android:id="@+id/itemHelp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_drawer_icon_circle"
                android:src="@drawable/ic_headset"
                android:padding="10dp"
                android:contentDescription="@string/drawer_help"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_help"
                android:textSize="12sp"
                android:textColor="@color/xhs_gray"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <!-- Setting -->
        <LinearLayout
            android:id="@+id/itemSetting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:background="?attr/selectableItemBackground">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/bg_drawer_icon_circle"
                android:src="@drawable/ic_settings"
                android:padding="10dp"
                android:contentDescription="@string/drawer_setting"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/drawer_setting"
                android:textSize="12sp"
                android:textColor="@color/xhs_gray"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
