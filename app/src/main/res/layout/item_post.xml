<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_12"
    app:cardCornerRadius="16dp"
    app:cardElevation="1dp"
    app:strokeColor="@color/xhs_divider"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/coverImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/bg_image_placeholder"
                android:contentDescription="@null"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_empty" />

            <TextView
                android:id="@+id/metaBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_8"
                android:background="@drawable/bg_badge"
                android:paddingLeft="@dimen/spacing_8"
                android:paddingRight="@dimen/spacing_8"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:text="1/3"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:layout_gravity="end|top"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/titleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_12"
            android:layout_marginTop="@dimen/spacing_12"
            android:layout_marginEnd="@dimen/spacing_12"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="在广州会常去的一家咖啡店 ☕️" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_12"
            android:layout_marginTop="@dimen/spacing_8"
            android:layout_marginBottom="@dimen/spacing_12"
            android:layout_marginEnd="@dimen/spacing_12"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/avatarView"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/bg_avatar_placeholder"
                android:contentDescription="@null"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/authorView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_8"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textColor="@color/black"
                android:textSize="13sp"
                tools:text="一只开心" />

            <TextView
                android:id="@+id/metaView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:textColor="@color/xhs_gray"
                android:textSize="12sp"
                tools:text="20" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
